{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": { "@/*": ["app/*"] },
    "jsx": "preserve",
    "moduleResolution": "bundler",
    "plugins": [{ "name": "next" }],
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "incremental": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}